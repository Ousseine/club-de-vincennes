{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block title %}Utilisateur : {{ user.name }}{% endblock %}

{% block body %}
    <h1>Voir l' utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Adresse e-mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom d' utilisateur</th>
                <td>{{ user.name }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning btn-sm">
        <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
    </button>

    {{ include('admin_user/_delete_form.html.twig') }}

    <button class="btn btn-primary"><a href="{{ path('admin_user_index') }}">Retour</a></button>
{% endblock %}
