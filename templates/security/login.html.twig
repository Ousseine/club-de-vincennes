{% extends 'base-admin.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/security.css') }}" />
{% endblock %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Identifiez-vous</h1>
    <div class="form-security">
        <label for="inputEmail" class="label-email">Adresse e-mail</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword" class="label-password mt-2">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label class="label-checkbox"><input type="checkbox" name="_remember_me" class="mr-2 mt-3">Reste connectez</label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">Identifiez</button>
    </div>
</form>
{% endblock %}
