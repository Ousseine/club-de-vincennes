{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block title %}Article : {{ article.title }}{% endblock %}

{% block body %}
    <h1>Description de l' article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title de l' article</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Image/Vidéo</th>
                <td>
                    <img src="{{ asset('uploads/' ~ article.file) }}" width="300" alt="image article" />
                </td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning"><a href="{{ path('admin_article_edit', {'id': article.id}) }}">Modifier</a></button>

    {{ include('admin_article/_delete_form.html.twig') }}

    <button class="btn btn-primary"><a href="{{ path('admin_article_index') }}">Retour</a></button>
{% endblock %}
