{% extends 'base-admin.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block title %}Gestion des catégories - Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <button class="btn btn-secondary btn-sm">
                        <a href="{{ path('admin_category_show', {'id': category.id}) }}">Voir</a>
                    </button>
                    <button class="btn btn-warning btn-sm">
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}">Modifier</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Oups ! aucune catégorie trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-info btn-lg"><a href="{{ path('admin_category_new') }}">Ajouter une catégorie</a></button>
{% endblock %}
