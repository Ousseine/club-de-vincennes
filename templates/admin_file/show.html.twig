{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block title %}File{% endblock %}

{% block body %}
    <h1>Voir le fichier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre du fichier</th>
                <td>{{ file.title }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ file.imageFilename }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-primary"><a href="{{ path('admin_file_index') }}">Retour</a></button>

    <button class="btn btn-warning"><a href="{{ path('admin_file_edit', {'id': file.id}) }}">Modifier</a></button>

    {{ include('admin_file/_delete_form.html.twig') }}
{% endblock %}
