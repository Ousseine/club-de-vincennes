{% extends 'base-admin.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block title %}Gestions des fichiers - Voir un fichier{% endblock %}

{% block body %}
    <h1>Voir le fichier</h1>
    <div class="show file">
        <div class="image">
            <img src="{{ asset('uploads/' ~ file.imageFilename) }}" width="400" alt="fichier" />
        </div>
        <div class="description">
            <table class="table">
                <tr>
                    <th>Titre du fichier</th>
                    <td>{{ file.title }}</td>
                </tr>
                <tr>
                    <th>Catégorie du fichier</th>
                    <td>
                        {% if file.category %}
                            {{ file.category }}
                        {% else %}
                            <span>Cet image n'a pas de catégorie</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>actions</th>
                    <td>
                        <button class="btn btn-warning"><a href="{{ path('admin_file_edit', {'id': file.id}) }}">Modifier</a></button>
                        <button class="btn btn-primary"><a href="{{ path('admin_file_index') }}">Retour</a></button>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    {{ include('admin_file/_delete_form.html.twig') }}
{% endblock %}
